<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="350.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            fx:controller="es.uji.ei1048.meteorologia.view.LoadWeather">
    <top>
        <HBox spacing="7.0" style="-fx-border-color: #0000 #0000 #d3d3d3 #0000;">
            <Label text="%title">
                <font>
                    <Font size="22.0"/>
                </font>
            </Label>
            <padding>
                <Insets bottom="7.0" left="7.0" right="7.0" top="7.0"/>
            </padding>
        </HBox>
    </top>
    <center>
        <VBox>
            <VBox spacing="10.0">
                <HBox alignment="CENTER" spacing="7.0">
                    <Label text="%city"/>
                    <ChoiceBox fx:id="cbCity" prefWidth="150.0"/>
                </HBox>
                <HBox alignment="CENTER" spacing="7.0">
                    <Label text="%resultMode.label"/>
                    <RadioButton fx:id="displayBasic" mnemonicParsing="false" selected="true" text="%resultMode.basic">
                        <toggleGroup>
                            <ToggleGroup fx:id="groupDisplay"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="displayAdvanced" mnemonicParsing="false" text="%resultMode.advanced" toggleGroup="$groupDisplay"/>
                </HBox>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </VBox>
            <ListView fx:id="saveList" prefHeight="302.0" prefWidth="356.0"/>
        </VBox>
    </center>
    <bottom>
        <VBox style="-fx-border-color: #d3d3d3 #0000 #0000 #0000;">
            <ButtonBar buttonOrder="+U">
                <buttons>
                    <Button fx:id="buttonLoad" mnemonicParsing="false" onAction="#load" text="%button.load" ButtonBar.buttonData="OTHER"/>
                </buttons>
            </ButtonBar>
            <padding>
                <Insets bottom="7.0" left="7.0" right="7.0" top="7.0"/>
            </padding>
        </VBox>
    </bottom>
</BorderPane>
