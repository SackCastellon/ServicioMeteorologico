<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" minWidth="225.0" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="es.uji.ei1048.meteorologia.view.SearchPane">
    <top>
        <VBox style="-fx-border-color: #0000 #0000 #d3d3d3 #0000;">
            <Label text="Search city weather">
                <font>
                    <Font size="22.0"/>
                </font>
            </Label>
            <padding>
                <Insets bottom="7.0" left="7.0" right="7.0" top="7.0"/>
            </padding>
        </VBox>
    </top>
    <center>
        <VBox spacing="7.0" BorderPane.alignment="CENTER">
            <VBox spacing="7.0">
                <Label text="City name:"/>
                <TextField fx:id="searchBox"/>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
            </VBox>
            <HBox alignment="CENTER" spacing="25.0">
                <VBox spacing="7.0">
                    <Label text="Result mode:"/>
                    <RadioButton fx:id="displayBasic" mnemonicParsing="false" selected="true" text="Basic">
                        <toggleGroup>
                            <ToggleGroup fx:id="groupDisplay"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="displayAdvanced" mnemonicParsing="false" text="Advanced"
                                 toggleGroup="$groupDisplay"/>
                </VBox>
                <VBox spacing="7.0">
                    <Label text="Weather mode:"/>
                    <RadioButton fx:id="weatherCurrent" mnemonicParsing="false" selected="true" text="Current">
                        <toggleGroup>
                            <ToggleGroup fx:id="groupWeather"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="weatherForecast" mnemonicParsing="false" text="Forecast"
                                 toggleGroup="$groupWeather"/>
                </VBox>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
            </HBox>
            <VBox fx:id="forecastOptions" alignment="CENTER" fillWidth="false" spacing="7.0">
                <Label text="Forecast:"/>
                <GridPane hgap="7.0" vgap="7.0">
                    <Label text="From:"/>
                    <DatePicker fx:id="fromDate" prefWidth="110.0" GridPane.columnIndex="1"/>
                    <Label text="To:" GridPane.rowIndex="1"/>
                    <DatePicker fx:id="toDate" prefWidth="110.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT"/>
                        <ColumnConstraints/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>
                </GridPane>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
            </VBox>
            <VBox alignment="CENTER">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <Label fx:id="error" textFill="RED"/>
            </VBox>
            <padding>
                <Insets bottom="7.0" left="7.0" right="7.0" top="7.0"/>
            </padding>
        </VBox>
    </center>
    <bottom>
        <VBox style="-fx-border-color: #d3d3d3 #0000 #0000 #0000;">
            <ButtonBar buttonOrder="+U_O">
                <buttons>
                    <Button fx:id="loadButton" mnemonicParsing="false" text="Load results"
                            ButtonBar.buttonData="OTHER"/>
                    <Button fx:id="searchBtn" defaultButton="true" mnemonicParsing="false" text="Search"
                            ButtonBar.buttonData="OK_DONE"/>
                </buttons>
            </ButtonBar>
            <padding>
                <Insets bottom="7.0" left="7.0" right="7.0" top="7.0"/>
            </padding>
        </VBox>
    </bottom>
</BorderPane>
