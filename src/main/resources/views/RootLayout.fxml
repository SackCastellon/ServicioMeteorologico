<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import org.controlsfx.control.StatusBar?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="es.uji.ei1048.meteorologia.view.RootLayout">
    <top>
        <MenuBar>
            <Menu text="%menu.service">
                <RadioMenuItem fx:id="serviceOpenWeather" selected="true" text="%menu.service.openweather">
                    <toggleGroup>
                        <ToggleGroup fx:id="groupProviders"/>
                    </toggleGroup>
                </RadioMenuItem>
                <RadioMenuItem fx:id="serviceAccuWeather" disable="true" text="%menu.service.accuweather"
                               toggleGroup="$groupProviders"/>
                <SeparatorMenuItem mnemonicParsing="false"/>
            </Menu>
            <Menu text="%menu.help">
                <MenuItem onAction="#aboutPopup" text="%menu.help.about"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <SplitPane fx:id="splitPane" dividerPositions="0.5">
            <Pane/>
            <Pane/>
        </SplitPane>
    </center>
    <bottom>
        <StatusBar fx:id="statusBar"/>
    </bottom>
</BorderPane>
